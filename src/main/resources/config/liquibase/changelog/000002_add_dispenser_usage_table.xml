<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="000002_add_dispenser_usage_table" author="AV">
        <createTable tableName="dispenser_usage">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="dispenser_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="open_time" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="close_time" type="datetime">
            </column>
            <column name="flow_volume" type="DOUBLE">
            </column>
            <column name="total_spent" type="NUMBER">
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>